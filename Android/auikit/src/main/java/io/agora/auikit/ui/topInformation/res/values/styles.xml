<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AUIUpperLeftInformation">
        <item name="aui_upperLeft_appearance">@style/AUIUpperLeftInformation.Appearance</item>
    </style>

    <style name="AUIUpperRightInformation">
        <item name="aui_upperRight_appearance">@style/AUIUpperRightInformation.Appearance</item>
    </style>

    <!-- 房间信息默认样式 -->
    <style name="AUIUpperLeftInformation.Appearance">
        <item name="aui_upperLeft_layout_width">wrap_content</item>
        <item name="aui_upperLeft_layout_height">wrap_content</item>
        <item name="aui_upperLeft_rootLayout_style">RECTANGLE</item>
        <item name="aui_upperLeft_layout_radius">19</item>
        <item name="aui_upperLeft_Layout_background">#33000000</item>
        <item name="aui_upperLeft_backVisibility">gone</item>
        <item name="aui_upperLeft_layout_paddingHorizontal">3dp</item>
        <item name="aui_upperLeft_layout_paddingVertical">2dp</item>

        <item name="aui_upperLeft_avatar_width">32dp</item>
        <item name="aui_upperLeft_avatar_height">32dp</item>

        <item name="aui_upperLeft_titleText">Title</item>
        <item name="aui_upperLeft_titleTextSize">16sp</item>
        <item name="aui_upperLeft_titleTextColor">#FFFFFF</item>
        <item name="aui_upperLeft_titleTextStyle">bold</item>
        <item name="aui_upperLeft_titleVisibility">visible</item>
        <item name="aui_upperLeft_title_max_width">120dp</item>
        <item name="aui_upperLeft_title_min_width">80dp</item>

        <item name="aui_upperLeft_subtitleText">SubTitle</item>
        <item name="aui_upperLeft_subtitleTextSize">11sp</item>
        <item name="aui_upperLeft_subtitleTextColor">#CCFFFFFF</item>
        <item name="aui_upperLeft_subtitleTextStyle">normal</item>
        <item name="aui_upperLeft_subtitleVisibility">visible</item>
        <item name="aui_upperLeft_subtitle_max_width">120dp</item>
        <item name="aui_upperLeft_subtitle_min_width">80dp</item>

        <item name="aui_upperLeft_title_spacing">8dp</item>
        <item name="aui_upperLeft_subtitle_spacing">8dp</item>
        <item name="aui_upperLeft_right_icon_spacing">0dp</item>
        <item name="aui_upperLeft_rightIcon_bg_marginRight">0dp</item>
        <item name="aui_upperLeft_rightIcon_Visibility">visible</item>
        <item name="aui_upperLeft_rightIcon_bg_Visibility">visible</item>

        <item name="aui_upperLeft_right_icon_idle">@drawable/aui_default_right_icon</item>
        <item name="aui_upperLeft_right_icon_background">@drawable/aui_upper_right_icon_bg</item>



        <item name="aui_upperLeft_icon_width">20dp</item>
        <item name="aui_upperLeft_icon_height">20dp</item>

        <item name="aui_upperLeft_icon_bg_width">44dp</item>
        <item name="aui_upperLeft_icon_bg_height">32dp</item>

    </style>

    <!-- 房间人数和用户展示默认样式 -->
    <style name="AUIUpperRightInformation.Appearance" >
        <item name="aui_upperRight_root_layout_width">wrap_content</item>
        <item name="aui_upperRight_root_layout_height">wrap_content</item>
        <item name="aui_upperRight_layout_paddingHorizontal">8dp</item>
        <item name="aui_upperRight_layout_paddingVertical">0dp</item>

        <item name="aui_upperRight_memberRankVisibility">visible</item>
        <item name="aui_upperRight_member1_Visibility">visible</item>
        <item name="aui_upperRight_member2_Visibility">visible</item>
        <item name="aui_upperRight_member3_Visibility">visible</item>
        <item name="aui_upperRight_member_item_width">26dp</item>
        <item name="aui_upperRight_member_item_height">26dp</item>
        <item name="aui_upperRight_member_count_width">wrap_content</item>
        <item name="aui_upperRight_member_count_height">wrap_content</item>
        <item name="aui_upperRight_member_spacing">2dp</item>
        <item name="aui_upperRight_default_member_bg">@drawable/aui_upper_right_item_bg</item>

        <item name="aui_upperRight_count_max_width">50dp</item>
        <item name="aui_upperRight_count_min_width">40dp</item>
        <item name="aui_upperRight_count_text">1.5K</item>
        <item name="aui_upperRight_count_size">11sp</item>
        <item name="aui_upperRight_count_color">#FFFFFF</item>
        <item name="aui_upperRight_count_style">bold</item>
        <item name="aui_upperRight_count_spacing">4dp</item>
        <item name="aui_upperRight_count_Visibility">gone</item>
        <item name="aui_upperRight_count_paddingHorizontal">4dp</item>
        <item name="aui_upperRight_count_paddingVertical">6dp</item>

        <item name="aui_upperRight_count_background">@drawable/aui_upper_right_count_bg</item>

        <!-- 更多用户 -->
        <item name="aui_roomMoreUser_drawable">@mipmap/ic_arrow</item>
        <item name="aui_roomMoreUser_Visibility">visible</item>
        <item name="aui_roomMoreUser_width">32dp</item>
        <item name="aui_roomMoreUser_height">32dp</item>
        <item name="aui_roomMoreUser_marginStart">4dp</item>

        <!-- 关闭 -->
        <item name="aui_roomClose_drawable">@mipmap/ic_shutdown</item>
        <item name="aui_roomClose_Visibility">visible</item>
        <item name="aui_roomClose_width">36dp</item>
        <item name="aui_roomClose_height">36dp</item>
        <item name="aui_roomClose_marginStart">4dp</item>

        <!-- 按钮 -->
        <item name="aui_roomButton_normalColor">#594230C8</item>

    </style>


    <style name="voice_seat_roundStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>